@model Sitio_Privado.Models.PasswordRecoveryEmailModel

To: @Model.User.Email
From: @Model.From
Subject: [Tanner] Nueva contraseña temporal

@{
    var imageEmbedder = (ImageEmbedder)ViewData["Postal.ImageEmbedder"];
    var resource = imageEmbedder.ReferenceImage(ViewContext.HttpContext.Server.MapPath("~/.build/img/mail_tanner.jpg"));
}

<body style="font-size: 15px;font-family: 'Calibri', 'Arial', sans-serif; font-weight: 400; color: #36373d; margin: 0; padding: 0; min-width: 100% !important; background-color: #f4f4f4">

    <table width="600px" border="0" cellpadding="0" cellspacing="0" style="margin:35px auto; background-color: #FFF">
        <tr>
            <td>
                <table style="width: 100%;" align="center" cellpadding="0" cellspacing="0" border="0">
                    <!-- header -->
                    <tr>
                        <td style="padding: 0px 0px 20px 0px">
                            <table align="left" border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
                                <tr>
                                    <td height="70">
                                        <img src="cid:@resource.ContentId" style="width: 100%; height:auto" />
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <!-- contenido -->
                    <tr>
                        <td style="padding: 40px 40px 27px 40px;">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td>
                                        @Html.EmbedImage("~/.build/img/mail_logo-tannerclientes.png")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 40px 0 20px 0; font-weight:700">
                                        Estimado Cliente,
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px 0;line-height:20px;">
                                        Se ha generado una solicitud desde tanner.cl para obtener una clave de ingreso al sitio Tanner Clientes.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 15px 0 10px 0; color: #005eb8; font-weight:700">
                                        Su clave temporal es:
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 0 20px 0; font-size:18px">
                                        @Model.User.TemporalPassword
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px 0">
                                        Utilice esta clave para ingresar y cámbiela inmediatamente en la sección Mis Datos.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 20px 0 10px 0; font-size:12px;line-height:17px;color:#666666;">
                                        *Si usted no ha solicitado esta clave puede existir una tercera persona intentando acceder a su cuenta. Le solicitamos ingresar con esta clave a su cuenta y cambiarla por una nueva.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px 0 0 0">
                                        <button style="width: 250px;height: 34px;margin: 16px auto 16px auto;background-color: #78be20;border-radius: 4px;-webkit-border-radius: 4px;-moz-border-radius: 4px;border: 0px;cursor: hand;cursor: pointer;color: #fff;font-size: 13px;display: block;font-weight:500;"><a href="http://www.tanner.cl/" style="color:#FFFFFF;text-decoration:none;text-transform:uppercase;">Ir a Tanner.cl</a></button>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    <!--analytics-->
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="http://tutsplus.github.io/github-analytics/ga-tracking.min.js"></script>
</body>